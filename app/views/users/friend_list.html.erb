<div class="container">
  <div class="row">

    <h2>我的好友</h2>
    <hr>

    <div class="container">
      <% @users.each do |user| %>
        <div class="col-sm-6 col-md-3">
          <div class="food">
            <%= image_tag user.avatar, class: "img-responsive center-block" %>
            <% if user.name == nil %>
              <%= user.id %>號使用者
            <% else %>
              <%= user.name %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
